{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}/app/src"
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000
    },
    {
      "name": "Electron: Main",
      "type": "node",
      "request": "launch",
      "stopOnEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "runtimeArgs": [".", "--enable-logging", "--remote-debugging-port=9222"],
      "outFiles": ["${workspaceRoot}/app/**/*.js"],
      "env": {},
      "sourceMaps": true,
      "protocol": "inspector",
      "outputCapture": "std"
    }
  ],
  "compounds": [
    {
      "name": "Debug Electron",
      "configurations": ["Electron: Main", "Electron: Renderer"],
      "protocol": "inspector",
      "outputCapture": "std"
    }
  ]
}
